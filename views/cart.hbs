<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
        <link rel="stylesheet" href="/stylesheets/stylehome.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>
<body>
    <div>
      {{>nav}}
        <div>
            <h1 class="cont">Shopping Cart</h1>
        </div>
        <br>
        <table class="table table-bordered">
          <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Item</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
          </thead>
          <tbody>
            {{#each data}}
           <tr>
             <th scope="row">{{this.order_id}}</th>
              <td>{{this.Prod_name}}</td>
              <td>{{this.price}}</td>
              <td>{{this.quantity}}</td>
            </tr>
            {{/each}}
            </tbody>
        </table>
        <form method="POST" action="total">
        <div class="form-group">
         <a href="total"><button type="submit">CHECKOUT</button></a>
        </div>
        </form>
-- {{>footer}} 
    <a href="/views/cart.hbs"><i class="fa fa-chevron-up" aria-hidden="true"></i></a>

    {{>scripts}}
</body>
</html>